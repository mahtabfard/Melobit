<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/home_layout"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="693dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="@color/black"
                android:id="@+id/txtmelobit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="MeloBit"
             android:fontFamily="sans-serif-smallcaps"
                android:textSize="30sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtartist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:text="Trending Artist"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="30sp" />
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txt_seeallartist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="See all"
                    android:clickable="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/trendimg"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:src="@drawable/trend"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txtnewsongs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:text="New songs"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="30sp" />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txt_seeallnew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="See all"
                    android:fontFamily="sans-serif-smallcaps"
                    android:clickable="true"
                    android:textSize="20sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/newimg"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:src="@drawable/newimage"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txttopday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:text="Top 10 Day"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="30sp" />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txt_seealltopday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="See all"
                    android:fontFamily="sans-serif-smallcaps"
                    android:clickable="true"
                    android:textSize="20sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/dayimg"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:src="@drawable/day"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txttopweek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:text="Top 10 week"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="30sp" />

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/txt_seeallweek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:text="See all"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="20sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/weekimg"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:src="@drawable/week"
                />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#1F6670"
        >

        <ImageView
            android:id="@+id/btnhome"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/home_icon"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:clickable="true"
            android:id="@+id/btnsearch"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:src="@drawable/search_icon" />
    </LinearLayout>


</RelativeLayout>